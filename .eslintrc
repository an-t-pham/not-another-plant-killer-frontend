{
    "parser": "babel-eslint",
    "plugins": [
      "react"
    ],
    "env": {
        "node": true,
        "commonjs": true,
        "browser": true,
        "es6": true
    },
    "rules": {
      "no-undef": [ 1 ],
      "quotes": [ 1, "double", "avoid-escape" ],
      "semi": ["error", "always"],
      "indent": ["error", "tab"],
      "comma-dangle": ["error", "never"],
    //   "padding-line-between-statements": [
    //     "error",
    //     { "blankLine": "always", "prev": "*", "next": "return" },
    //     { "blankLine": "always", "prev": "*", "next": "const" }
    // ]
    },
    "parserOptions": {
        "ecmaVersion": 2015
    }
  }